<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center">
        <h1 class="mb-4 mt-4">Add new comment to <%= campground.name %></h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-10 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-dark btn-block">Sumbit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>

</div>

<% include ../partials/footer %>

